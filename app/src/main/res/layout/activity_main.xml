<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3">

        <Button
            android:id="@+id/handler1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Handler测试1" />

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stop"

            />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生命周期"

            />

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test" />

        <Button
            android:id="@+id/btnKotlin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kotlin测试" />

        <Button
            android:id="@+id/btnReactNative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="React Native测试" />

        <Button
            android:id="@+id/btnReactNative2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="React Activity" />

        <Button
            android:id="@+id/handlerActivityBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Handler Activity" />

        <Button
            android:id="@+id/uiBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UI Test" />

        <Button
            android:id="@+id/carouseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carouse" />

        <Button
            android:id="@+id/composeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compose" />

        <Button
            android:id="@+id/composeBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compose2" />

        <Button
            android:id="@+id/intentBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常用Intent" />
        <Button
            android:id="@+id/serviceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service测试" />

        <Button
            android:id="@+id/anim1Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anim1" />
        <Button
            android:id="@+id/anim2Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anim2" />
        <Button
            android:id="@+id/anim3Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ConstraintLayout Anim" />

        <Button
            android:id="@+id/drawableBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drawable List"
            />

    </GridLayout>

    <com.lqd.androidpractice.view.RadiusProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="100dp"
        android:layout_height="8dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="19dp"
        android:background="@android:color/transparent" />

    <ImageView
        android:id="@+id/v_1"

        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_marginTop="180dp"

        android:background="@drawable/order_shape_line_gray" />

</FrameLayout>